<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".EnterWordFragment">

    <ImageView
        android:id="@+id/spinnerImageView"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/spinner"
        app:srcCompat="@drawable/ic_emblem_synchronizing_symbolic"
        style="@style/Spinner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/translatedWordEditText"
            style="@style/EnterWord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/enter_the_word"
            android:importantForAutofill="no" />

        <ImageView
            android:id="@+id/clearTextButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/clear_button"
            app:srcCompat="@drawable/ic_clear_24px"
            style="@style/ClearTextButton" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dictionaryImageView"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:contentDescription="@string/dictionary_icon"
            app:srcCompat="@drawable/ic_view_dual_symbolic"
            tools:ignore="NestedWeights"
            style="@style/StartFragmentButton" />

        <ImageView
            android:id="@+id/findIconImageView"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:contentDescription="@string/find_icon"
            app:srcCompat="@drawable/ic_edit_find_symbolic_light"
            style="@style/StartFragmentButton" />

    </LinearLayout>

    <ImageView
        android:id="@+id/invert_colors_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/back_icon"
        style="@style/RightBottomCornerButton" />

</LinearLayout>