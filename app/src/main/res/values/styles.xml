<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/colorText</item>
        <item name="fontFamily">@font/roboto_slab</item>
    </style>

    <style name="TitleText" parent="Text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SecondaryText" parent="Text">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="LexicalSymbol" parent="Text">
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TranslatedText" parent="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Word" parent="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="EnterWord" parent="TitleText">
        <item name="android:inputType">textAutoCorrect</item>
        <item name="android:textColorHint">@color/colorDisabled</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="EtymologyText" parent="Text">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemNumber" parent="SecondaryText">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ItemSecondaryText" parent="SecondaryText">
        <item name="android:singleLine">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ItemPrimaryText" parent="Text">
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ClearTextButton">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@null</item>
    </style>

    <style name="StartFragmentButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <style name="RightBottomCornerButton">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="PronunciationText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/colorDisabled</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>